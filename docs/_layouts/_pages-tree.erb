<% resource ||= root_page %>
<% level ||= 1 %>
<ul>
  <% for child in nested_pages(resource) %>
  <li class="level<%= level %>">
    <%= link_to_page child %>
    <% unless nested_pages(child).empty? %>
      <%= partial '_layouts/pages-tree', locals: { resource: child, level: level + 1 } %>
    <% end %>
  </li>
  <% end %>
</ul>
